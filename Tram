import java.util.Scanner;
public class Main
{
    public static void main(String[] args) {
       Scanner Sc =new Scanner(System.in);
       int n=Sc.nextInt();
       int p=0;
       int max=0;
       for(int i=0;i<n;i++)
       {
           int a=Sc.nextInt();
           int b=Sc.nextInt();
           p=b-a+p;
           if(max<p)
           {
               max=p;
           }
           
       }
       System.out.print(max);
    }
}
