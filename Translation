import java.util.Scanner;
public class Main
{
    public static void main(String[] args) {
       Scanner Sc =new Scanner(System.in);
      String s=Sc.next();
      String b=Sc.next();
      String rev ="";
      for(int i=s.length()-1;i>=0;i--)
      {
          rev =rev+s.charAt(i);
      }
          if(b.equals(rev))
          {
              System.out.print("YES");
          }
          else
          {
              System.out.print("NO");
          }
      }
    }
