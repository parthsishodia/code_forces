import java.util.Scanner;
public class Main
{
    public static void main(String[] args) {
       Scanner Sc =new Scanner(System.in);
        int a =Sc.nextInt();
        int b= Sc.nextInt();
        int count =0;
        while(a<=b)
        {
            a=a*3;
            b=b*2;
            count++;
            
        }
        System.out.print(count);
    }
}
