import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner Sc=new Scanner(System.in);
		int n=Sc.nextInt();
		    int count=0;
		while(n--!=0)
		{   
		   int people=Sc.nextInt();
		   int space=Sc.nextInt();
		    if(space-people>=2)
		    {
		        count++;
		    }
		}
		System.out.print(count);
		
	}
}
