import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	Scanner Sc =new Scanner(System.in);
	int n=Sc.nextInt();
    int arr[]=new int[n];
    int count=1;
    arr[0]=Sc.nextInt();
    for(int i=1;i<n;i++)
    {   
        arr[i]=Sc.nextInt();
        if(arr[i]!=arr[i-1])
        {
            count++;
        }
        
    }
    System.out.print(count);

	}
}
