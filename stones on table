import java.util.Scanner;
public class Main
{
    public static void main(String args[])
    {   
        Scanner Sc= new Scanner(System.in);
        int n=Sc.nextInt();
        int a=0;
        String s=Sc.next();
         char last=s.charAt(0);
        for(int i=1;i<n;i++)
        {
            if(s.charAt(i)==last)
            {
                a++;
            }
            else
            {
                last=s.charAt(i);
            }
        }
        System.out.print(a);
    }
}
